CHIP HalfAdder {
    IN a, b;    // 1-bit inputs
    OUT sum,    // Right bit of a + b 
        carry;  // Left bit of a + b

    PARTS:
    // Xor(a=a,b=b,out=sum);
    // And(a=a,b=b,out=carry);
    Nand(a=a, b=a , out=na );
    Nand(a=b , b=b , out=nb );
    Nand(a=na , b=b , out=o1 );
    Nand(a=a , b=nb , out=o2 );
    Nand(a=o1 , b=o2 , out=sum );
    Nand(a=a , b=b , out=ab );
    Nand(a=ab , b=ab , out=carry );
}